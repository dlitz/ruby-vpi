require 'rake/clean'

SOURCES = ['src/manual.xml']

FORMATS = {
	# extension => flag
	'html' => 'xhtml-nochunks',
	'txt' => 'txt',
}.freeze

task :default => FORMATS.keys


# create tasks for each output format
FORMATS.each_pair do |formatExt, formatFlag|
	desc "Generate documentation in #{formatExt} format."
	task formatExt


	# attach each source to the current format
	SOURCES.each do |srcPath|
		srcPure = File.basename(srcPath, File.extname(srcPath))
		dstPath = "#{srcPure}.#{formatExt}"

		file dstPath => srcPath do
			sh 'xmlto', formatFlag, srcPath
		end

		task formatExt => dstPath
	end
end
