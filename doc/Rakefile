require 'rake/clean'

SOURCES = ['src/manual.xml']
FORMATS = {
	# format => extension, flag
	'html' => ['html', 'xhtml-nochunks'],
	'text' => ['txt', 'txt'],
}.freeze

task :default => FORMATS.keys


# create tasks for each output format
FORMATS.each_pair do |format, formatOpts|
	formatExt, formatFlag = formatOpts


	directory format
	CLOBBER.include format

	desc "Generate documentation in #{format} format."
	file format #=> SOURCES


	# attach each source to the current format
	SOURCES.each do |srcPath|
		srcPure = File.basename(srcPath, File.extname(srcPath))
		dstPath = "#{format}/#{srcPure}.#{formatExt}"

		file dstPath => srcPath do
			sh 'xmlto', '-o', format, formatFlag, srcPath
		end

		file format => dstPath
	end
end
