require 'rake/clean'

FORMATS = {
	# extension => flag
	'html' => 'xhtml',
	'text' => 'txt',
}.freeze

task :default => FORMATS.keys << :resources

FORMATS.each_pair do |outDir, outFmt|
	directory outDir

	desc "Generate documentation in #{outDir} format."
	file outDir => ['src/manual.xml', 'src/manual.xsl'] do |t|
		sh %{xmlto #{outFmt} -o #{outDir} -m #{t.prerequisites[1]} #{t.prerequisites[0]}}
	end

	CLOBBER.include outDir


	# copy resources needed by output
		FileList['src/*'].each do |path|
			if FileTest.directory? path
				dst = File.join(outDir, File.basename(path))

				file dst => path do |t|
					cp_r t.prerequisites[0], t.name
				end

				CLEAN.include dst

				file :resources => dst
				file dst => outDir
			end
		end
end
